{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "prisma:generate", "prisma:db:migrate"],
      "outputs": ["dist/**"]
    },
    "audio-engine:build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "web:build": {
      "dependsOn": ["^build", "audio-engine:build"],
      "env": ["VERCEL_URL", "PORT", "NODE_ENV"],
      "outputs": [".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["prisma:db:migrate", "prisma:db:seed"],
      "cache": false
    },
    "prisma:db:migrate": {
      "cache": false
    },
    "prisma:db:seed": {
      "cache": false
    },
    "prisma:generate": {
      "cache": false
    }
  }
}
