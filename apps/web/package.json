{
  "name": "web",
  "private": true,
  "author": {
    "name": "Ron Houben",
    "email": "ron.houben85@gmail.com",
    "url": "https://github.com/RonHouben"
  },
  "scripts": {
    "dev": "npm run dev:tailwind",
    "dev:tailwind": "concurrently \"next dev \" \"npm run tailwind -- --watch\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "tailwind": "tailwindcss -i src/styles/globals.css -o src/styles/dist.css",
    "format": "prettier --write \"**/*.{js,ts,tsx,md}\"",
    "postinstall": "npm run tailwind"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "@audio-engine/react": "*",
    "@headlessui/react": "^1.7.7",
    "@heroicons/react": "^2.0.13",
    "audio-engine": "*",
    "clsx": "1.2.1",
    "concurrently": "7.6.0",
    "music-notes": "*",
    "next": "latest",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "6.0.0-beta.2",
    "styled-jsx": "5.1.1",
    "ui": "*",
    "use-reducer-async": "^2.1.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.8",
    "@types/node": "18.11.17",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "autoprefixer": "^10.4.13",
    "eslint": "8.30.0",
    "eslint-config-next": "latest",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwind-scrollbar": "^2.1.0",
    "tailwindcss": "^3.2.4",
    "typescript": "4.9.4"
  }
}
